    <script>
        $(document).ready(function () {
            $("#btn_find_BankStatement").click(function (e) {
                e.preventDefault();
                var formData = $("#ModelForm").serialize();

                $.ajax({
                    type: "POST",
                    url: "/NationalGangotri/SankalpSiddhi/SearchBankStatementUsingPara",
                    data: formData,
                    contentType: "application/x-www-form-urlencoded",
                    success: function (response) {
                        // Assuming response is an array of BankStatements
                        var bankStatements = response.data;

                        // Clear existing table rows
                        $("#tblbankDetails tbody").empty();

                        // Append new rows based on the response
                        for (var i = 0; i < bankStatements.length; i++) {
                            var item = bankStatements[i];
                            var newRow = "<tr>" +
                                "<td>" + item.banK_Code + "</td>" +
                                "<td>" + (item.doe ? new Date(item.doe).toLocaleDateString() : "") + "</td>" +
                                "<td>" + item.bank_Name + "</td>" +
                                "<td>" + item.particular + "</td>" +
                                "<td>" + item.chqNo + "</td>" +
                                "<td>" + parseFloat(item.cr).toFixed(2) + "<br />" + parseFloat(item.curr_Rate).toFixed(2) + "</td>" +
                                "<td>" + parseFloat(item.balance).toFixed(2) + "</td>" +
                                "<td>" + item.branch + "</td>" +
                                "<td>" + item.receiveID + "</td>" +
                                "</tr>";

                            $("#tblbankDetails tbody").append(newRow);
                        }
                    },
                    error: function (error) {
                        console.error(error);
                    }
                });
            });
        });

    </script>


