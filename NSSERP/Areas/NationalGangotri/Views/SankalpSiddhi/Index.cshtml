    <script>
        $(document).ready(function () {
            var hiddenField = $('#hdnMapWithBankIDList'); // Update with your actual hidden field ID
            var tableData = []; // Array to store all table data

            // Function to update hidden field with JSON data
            function updateHiddenField() {
                var newData = [];

                // Iterate through table rows and collect data
                $('#depositTable tbody tr').each(function () {
                    var rowData = {
                        mode: $(this).find('td:eq(0)').text(),
                        DepositeBank: $(this).find('td:eq(1)').text(),
                        date: $(this).find('td:eq(2)').text(),
                        currencyCode: $(this).find('td:eq(3)').text(),
                        amount: parseFloat($(this).find('td:eq(4)').text()),
                        BankID: $(this).find('.bankIdInput').val(),
                        TransactionID: $(this).find('.transactionIdInput').val(),
                        TempDoc: $(this).find("td:eq(8)").text(),
                        refNo: $(this).find('td:eq(9)').text(),
                        receiveId: $(this).find('td:eq(10)').text()

                    };

                    newData.push(rowData);
                });

                // Update hidden field with updated JSON data
                hiddenField.val(JSON.stringify(newData));
            }

            // Add a click event listener to the BankID icon
            $('#tableDetails tbody tr td:nth-child(2) a').on('click', function (e) {
                e.preventDefault();

                // Retrieve the receive ID from the data attribute or any other way based on your HTML structure
                var receiveId = $(this).closest('tr').find('td:nth-child(3)').text();

                // Make an AJAX request to fetch details based on receive ID
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetDepositDetails", "SankalpSiddhi")', // Replace with your controller and action method
                    data: { receiveId: receiveId },
                    dataType: 'json',
                    success: function (data) {
                        // Process the received data
                        if (data && data.data) {
                            // Parse the JSON string into an array of objects
                            var depositDetails = JSON.parse(data.data);

                            // Check if data is an array or an object
                            depositDetails = Array.isArray(depositDetails) ? depositDetails : [depositDetails];

                            // Populate the Back Office ReceiveID Transaction fieldset with the received data
                            populateFieldset(depositDetails);

                            // Update the tableData array with the new data
                            tableData = depositDetails;

                            // Show the modal
                            $('#myModal').modal('show');
                        } else {
                            alert('Failed to fetch details.');
                        }
                    },
                    error: function () {
                        alert('Failed to fetch details. Please try again.');
                    }
                });
            });

            // Function to populate the Back Office ReceiveID Transaction fieldset with data
            function populateFieldset(data) {
                var tableBody = $('#depositTable tbody');
                tableBody.empty();

                var MainFolder1 = '@rootUrl/DocDonationReceive';
                data.forEach(function (item, index) {
                    var newRow = '<tr>' +
                        '<td>' + item.DepositeMode + '</td>' +
                        '<td>' + item.DepositBank + '</td>' +
                        '<td>' + new Date(item.DepositeDate).toLocaleDateString() + '</td>' +
                        '<td>' + item.CurrencyCode + '</td>' +
                        '<td>' + (item.DepositeAmount ? item.DepositeAmount.toFixed(2) : 'N/A') + '</td>' +
                        '<td><input type="text" class="form-control bankIdInput" value="' + item.BankID + '"></td>' +
                        '<td><input type="text" class="form-control transactionIdInput" value="' + item.TransactionID + '"></td>' +
                        "<td><a href='" + MainFolder1 + "/" + item.DocPayInSlip + "' target='_blank'>View</a></td>" +
                        "<td style='display:none;'>" + item.DocPayInSlip + "</td>" +
                        '<td style="display:none">' + item.REF_NO_BANK + '</td>' +
                        '<td style="display:none">' + item.REF_NO + '</td>' +
                        '</tr>';
                    tableBody.append(newRow);
                });

                // Update hidden field with JSON data
                updateHiddenField();

                $('#depositTable').show();
                $('#backOfficeFieldset').toggle(tableBody.find('tr').length > 0);
            }

            // Listen for changes in input fields
            $(document).on('input', '.bankIdInput, .transactionIdInput', function () {
                updateHiddenField();
            });

            // Remove modal from the DOM when it's closed
            // Hide modal without removing it from the DOM
            $('body').on('hidden.bs.modal', '.modal', function () {
                $(this).data('bs.modal', null);
            });

        });

    </script>

   

