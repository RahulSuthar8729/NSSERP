                                                    var amountFromApi = response.data[0].Amount;
                                                    $('#ReceiptAmount').val(amountFromApi.toFixed(2));
                                                    // $('#receiveamount').val(amountFromApi.toFixed(2));
                                                    updateAnnounce();
