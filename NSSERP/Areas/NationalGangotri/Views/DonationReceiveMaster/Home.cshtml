                                                            <th>Donor ID</th>
                                                            <th>Name</th>
                                                            <!-- Add more headers as needed -->
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="searchResultsTableBody">
                                                        <!-- Search results rows will be appended here dynamically -->
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>




                                <div class="form-group col-lg-3" style="display:none;">
