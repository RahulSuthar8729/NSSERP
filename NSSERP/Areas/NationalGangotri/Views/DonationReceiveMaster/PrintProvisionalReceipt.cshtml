@model NSSERP.Areas.NationalGangotri.Models.ProvisionalReceiptModel;
@{
    ViewData["Title"] = "PrintProvisionalReceipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Provisional Receipt</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5; /* Lighter background for better contrast */
        }

        .receipt-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin-top: 20px;
        }

        .receipt-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .receipt-header h1 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 5px;
            }

        .receipt-table {
            font-size: 16px;
        }

            .receipt-table th {
                text-align: left;
                padding-right: 15px;
            }

        .receipt-footer {
            margin-top: 20px;
            font-size: 14px;
        }

            .receipt-footer p {
                margin-bottom: 0;
            }

        .receipt-note {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 receipt-card">
                <div class="receipt-header">
                    <h1>Provisional Receipt</h1>
                    <p class="text-muted">Narayan Seva Sansthan PAN NO. AAATN4183F</p>
                </div>

                <div class="receipt-body">
                    <table class="table">
                        <tr>
                            <th>Rec Id</th>
                            <td>@Model.ReceiveID</td>
                            <th>Date</th>
                            <td>@Model.ReceiveDate.ToString("dd-mm-yyyy")</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@Model.NamePrefix + @Model.FullName</td>
                        </tr>
                        <tr>
                            <th>Amount</th>
                            <td>@Model.TotalAmount + @Model.CurrencyCode</td>
                        </tr>
                        <tr>
                            <th>Mode</th>
                            <td>@Model.PaymentModeName</td>
                        </tr>
                        <tr>
                            <th>Purpose</th>
                            <td>@Model.Purpose</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Model.FullAddress</td>
                        </tr>
                        <tr>
                            <th>Pincode</th>
                            <td>@Model.PinCode</td>
                        </tr>
                        <tr>
                            <th>Mobile</th>
                            <td>@Model.MobileNo</td>
                        </tr>
                    </table>
                </div>

                <div class="receipt-footer">
                    <p style="font-size:small">
                        Note: If you want exemption in income tax, then you must provide your pan Card or Aadhaar number,if PAN or Aadhaar is not available then please provide any one document as given Below : -
                    </p>
                    <ul style="font:small">
                        <li>Passport</li>
                        <li>Elector's Photo ID</li>
                        <li>Driving License</li>
                        <li>Ration Card</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
