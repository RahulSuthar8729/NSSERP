@model List<NSSERP.Areas.NationalGangotri.Models.ProvisionalReceiptModel>
@{
    ViewData["Title"] = "PrintProvisionalReceipt";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Provisional Receipt</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .receipt-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin-top: 20px;
        }

        .receipt-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .receipt-header h1 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 5px;
            }

        .receipt-table {
            font-size: 16px;
        }

            .receipt-table th {
                text-align: left;
                padding-right: 15px;
            }

        .receipt-footer {
            margin-top: 20px;
            font-size: 14px;
        }

            .receipt-footer p {
                margin-bottom: 0;
            }

        .receipt-note {
            margin-top: 10px;
        }

        .receipt-body hr {
            border-top: 1px solid #ddd;
            margin-top: 20px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    @foreach (var item in Model)
    {

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 receipt-card">
                    <div class="receipt-header">
                        <h1>Provisional Receipt</h1>
                        <p class="text-muted">Narayan Seva Sansthan PAN NO. AAATN4183F</p>
                    </div>

                    <div class="receipt-body">

                        <table class="table">
                            <tr>
                                <th class="col-2">Rec Id</th>
                                <td class="col-2">@item.ReceiveID</td>
                                <th class="col-6 text-end">Date</th>
                                <td class="col-2">@item.ReceiveDate.ToString("dd-MM-yyyy")</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td colspan="5">@item.FullName</td>
                            </tr>
                            <tr>
                                <th>Amount</th>
                                <td colspan="5">@item.TotalAmount</td>
                            </tr>
                            <tr>
                                <th>Mode</th>
                                <td colspan="5">@item.PaymentModeName</td>
                            </tr>
                            <tr>
                                <th>Purpose</th>
                                <td colspan="5">@string.Join(", ", item.Purpose)</td>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td colspan="5">@item.FullAddress</td>
                            </tr>
                            <tr>
                                <th>Pincode</th>
                                <td colspan="5">@item.PinCode</td>
                            </tr>
                            <tr>
                                <th>Mobile</th>
                                <td colspan="5">@item.MobileNo</td>
                            </tr>
                        </table>

                    </div>

                    <div class="receipt-footer">
                        <p style="font-size:small">
                            Note: If you want exemption in income tax, then you must provide your pan Card or Aadhaar number,if PAN or Aadhaar is not available then please provide any one document as given Below : -
                        </p>
                        <ul style="font:small">
                            <li>Passport</li>
                            <li>Elector's Photo ID</li>
                            <li>Driving License</li>
                            <li>Ration Card</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    }
</body>
</html>
