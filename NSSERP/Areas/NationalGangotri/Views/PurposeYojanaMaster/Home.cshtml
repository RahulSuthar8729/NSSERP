@using System.Security.Claims;
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Mvc.TagHelpers;
@using Microsoft.AspNetCore.Mvc.Rendering;
@using System.IO;
@model Tuple<NSSERP.Areas.NationalGangotri.Models.PurposeYojanaMaster,NSSERP.Areas.NationalGangotri.Models.PurposeYojanaCurrencyMaster>
@{
    ViewData["Title"] = "PurposeYojanaMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserDepartment = User.FindFirst("Department")?.Value;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="..." crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="..."></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="..."></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="..."></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <style>
        .card-header.sticky-top {
            background-color: #fff;
            z-index: 1000;
            border-bottom: 1px solid #dee2e6;
        }
    </style>
    @section scripts {
        <script>
            function convertToUpperCase(input) {
                input.value = input.value.toUpperCase();
            }
        </script>

    }

</head>
<body>
    <div class="card">
        @if (Model.Item1.msg != null || Model.Item1.msg != "")
        {
            ViewBag.msg = Model.Item1.msg;
        }
        <div class="card-header">
            <div class="row">
                <div class="col text-left">
                    <h5>
                        <span style="color:#1cb8a1">PURPOSE YOJANA</span>
                        <span style="color:#28166f">MASTER</span>
                    </h5>
                </div>
                <div class="col text-left">
                    <h5>
                        <span style="color:#1cb8a1">INDIAN GANGOTRI</span>
                    </h5>
                </div>
                <div class="col-2 text-right">
                    <a title="Go Back Home" href="/Gangotri/Home" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form id="formdata" action="/NationalGangotri/PurposeYojanaMaster/Home" method="post">
                @Html.AntiForgeryToken()



                <fieldset id="Purposefieldset" class="show border rounded p-3">
                    <legend style="font-weight:bold;" class="d-flex justify-content-between align-items-center text-left">
                        <button class="btn btn-link collapse-icon" type="button" data-toggle="collapse" data-target="#PurposefieldsetContent" aria-expanded="false" aria-controls="PurposefieldsetContent">
                            <span id="collapseIcon" class="">&#43;</span>
                            <span style="font-size: larger;color:#1cb8a1;font-weight:bold;font-weight:bold;">Purpose Yojana Details</span>
                        </button>
                    </legend>

                    <div id="PurposefieldsetContent" class="nested-form-container collapse show">

                        <div class="row">
                            <div class="form-group col-lg-3">
                                <label>Yojana Code</label>
                                <textarea class="form-control" readonly name="PurposeYojanaMaster.Yojna_ID" oninput="convertToUpperCase(this)" rows="1">@Model.Item1.Yojna_ID</textarea>
                                <div style="color:#1cb8a1;font-weight:bold"></div>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Purpose <span style="color: red;">*</span></label>
                                <select class="form-control" id="headInput" required name="PurposeYojanaMaster.Purpose_ID">
                                    <option value="0">Select Head</option>
                                    @if (Model.Item1 != null)
                                    {
                                        @foreach (var head in Model.Item1.HeadList)
                                        {
                                            <option value="@head.Purpose_ID" @(head.Purpose_ID == Model.Item1.Purpose_ID ? "selected" : "")>@head.Purpose</option>
                                        }
                                    }
                                </select>

                            </div>
                            <div class="form-group col-lg-3">
                                <label>Yojana Name<span style="color: red;">*</span></label>
                                <textarea class="form-control" required name="PurposeYojanaMaster.Yojna" oninput="convertToUpperCase(this)" placeholder="enter purpose" rows="1"></textarea>
                                <div style="color:#1cb8a1;font-weight:bold"></div>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Donor Count</label>
                                <input type="text" value="@Model.Item1.Donor_Count" name="PurposeYojanaMaster.Donor_Count" class="form-control" />
                                <div style="color:#1cb8a1;font-weight:bold"></div>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Amount</label>
                                <input type="number" value="@Model.Item1.Yojna_Amount" name="PurposeYojanaMaster.Yojna_Amount" class="form-control" />
                                <div style="color:#1cb8a1;font-weight:bold"></div>
                            </div>
                            <br />
                            <div class="form-group col-lg-3">
                                <label>Status</label>
                                <div class="form-check">
                                    <input type="radio" id="active" name="PurposeYojanaMaster.Status" value="A" @(Model.Item1.Status.ToString() == "A" ? "checked" : "")>
                                    <label for="active">Active</label>

                                    <input type="radio" id="inactive" name="PurposeYojanaMaster.Status" value="E" @(Model.Item1.Status.ToString() == "E" ? "checked" : "")>
                                    <label for="inactive">Inactive</label>
                                </div>
                            </div>

                            <div class="form-group col-lg-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="forOperation" name="PurposeYojanaMaster.FOR_OPERATION" value="Y" @(Model.Item1.FOR_OPERATION.ToString() == "Y" ? "checked" : "")>
                                    <label class="form-check-label" for="forOperation">For Operation</label>
                                </div>

                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="operationPhoto" name="PurposeYojanaMaster.OPERATION_PHOTO" value="Y" @(Model.Item1.OPERATION_PHOTO.ToString() == "Y" ? "checked" : "")>
                                    <label class="form-check-label" for="operationPhoto">Operation Photo</label>
                                </div>
                            </div>



                            <div class="form-group col-lg-3">
                                <label>Order</label>
                                <input type="text" value="@Model.Item1.Ord" name="PurposeYojanaMaster.Ord" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Order</label>
                                <input type="text" value="@Model.Item1.Ord_Yojna" name="PurposeYojanaMaster.Ord_Yojna" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Start Limit</label>
                                <input type="text" value="@Model.Item1.Start_Limit" name="PurposeYojanaMaster.Start_Limit" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Counter</label>
                                <input type="text" value="@Model.Item1.Qty" name="PurposeYojanaMaster.Qty" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Refrence No.</label>
                                <input type="text" value="@Model.Item1.Ref_No" name="PurposeYojanaMaster.Ref_No" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Old</label>
                                <input type="text" value="" name="PurposeYojanaMaster.Ord_Yojna" class="form-control" />
                            </div>
                        </div>
                    </div>

                </fieldset>

                <br />
                <fieldset id="CurrencylistFieldset" class="show border rounded p-3">
                    <legend style="font-weight:bold;" class="d-flex justify-content-between align-items-center text-left">
                        <button class="btn btn-link collapse-icon" type="button" data-toggle="collapse" data-target="#Currencylist" aria-expanded="false" aria-controls="Currencylist">
                            <span id="collapseIcon" class="">&#43;</span>
                            <span style="font-size: larger;color:#1cb8a1;font-weight:bold;font-weight:bold;">Currency Details</span>
                        </button>
                    </legend>

                    <div id="Currencylist" class="nested-form-container collapse show">

                        <table class="table table-striped table-bordered table-hover" id="countryTable">
                            <thead class="thead-dark">
                                <tr>
                                    <th class="col-2">Currency ID</th>
                                    <th class="col-3">Currency Name</th>
                                    <th class="col-2">Currency Symbol</th>
                                    <th class="col-2">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Item2 != null)
                                {

                                    @foreach (var item in Model.Item2.CurrencyList)
                                    {
                                        <tr>

                                            <td>@item.Currency_id</td>
                                            <td>@item.CURRENCY</td>
                                            <td>@item.CURRENCY_SYMBOL</td>
                                            <td>
                                                <label for="amount_@item.Currency_id">Amount:</label>
                                                <input name="CurrencyAmounts[@item.Currency_id].Amount" id="amount_@item.Currency_id" class="form-control" type="number" value="@item.Amount" />
                                                <input name="CurrencyIDs[@item.Currency_id].Currency_id" id="currencyid_@item.Currency_id" class="form-control" type="hidden" value="@item.Currency_id" />

                                            </td>
                                            <td style="display:none">
                                                <input type="hidden" id="hiddenPurposeId" name="PurposeYojanaCurrencyMaster.Purpose_id" value="@Model.Item1.Purpose_ID" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <input type="hidden" id="CurrencyData" name="PurposeYojanaCurrencyMaster.CurrencyData" />
                        <script>
                            $(document).ready(function () {
                                $('#btnsubmit').on('click', function (event) {
                                    event.preventDefault();

                                    var currencyData = [];

                                    $('#countryTable tbody tr').each(function () {
                                        var currencyId = $(this).find('[name^="CurrencyIDs["][name$=".Currency_id"]').val();
                                        var amount = $(this).find('[name^="CurrencyAmounts["][name$=".Amount"]').val();

                                        var currencyObject = {
                                            Purpose_ID: $('#hiddenPurposeId').val(),
                                            Currency_id: currencyId,
                                            Amount: amount,
                                            DATA_FLAG: 'GANGOTRI'
                                        };


                                        currencyData.push(currencyObject);
                                    });


                                    $('#CurrencyData').val(JSON.stringify(currencyData));


                                    $(this).closest('form').submit();
                                });
                            });
                        </script>

                        <script>
                            $(document).ready(function () {
                                $('#headInput').on('change', function () {
                                    var selectedValue = $(this).val();
                                    $('#hiddenPurposeId').val(selectedValue);
                                });
                            });
                        </script>
                    </div>
                </fieldset>

                <br />
                <div class="container-lg">
                    <div class="text-center">

                        @{
                            string BtnName = string.Empty;
                            string viewParam = Context.Request.Query["view"];
                            bool isViewEnabled = !string.IsNullOrEmpty(viewParam) && viewParam.ToLower() == "true";

                            string editParam = Context.Request.Query["edit"];
                            bool isEditEnabled = !string.IsNullOrEmpty(editParam) && editParam.ToLower() == "true";

                            if (isEditEnabled)
                            {
                                BtnName = "Update";
                            }
                            else
                            {
                                BtnName = "Submit";
                            }
                        }

                        <button type="submit" id="btnsubmit" class="btn btn-success" style="@(isViewEnabled ? "display:none;" : "")">
                            <i class="fas fa-check"></i>@BtnName
                        </button>

                        <button type="reset" class="btn btn-danger">Cancel</button>
                        <a title="Go Back Home" href="/Gangotri/Home" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</body>
</html>




