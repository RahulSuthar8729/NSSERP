@model NSSERP.Areas.NationalGangotri.Models.DonorMaster
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @section scripts {
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
       
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>     

        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
   
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />
        <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#CityID').select2();

                $('#StateID').select2();
                $('#tableDetails').DataTable({
                    "order": [[3, "desc"]],
                    "paging": true, 
                    "lengthMenu": [10, 25, 50, 75, 100], 
                    "searching": true, 
                    "info": true, 
                    "responsive": true, 
                    "columnDefs": [
                        { "targets": [0, 1], "orderable": false } 
                    ]

                });

            });

        </script>

    }
    <style>
        /* Add your custom styles here */
        body {
            padding: 20px;
            background-color: #f8f9fa; /* Set a background color */
        }

        .container {
            text-align: center;
        }

        .table-container {
            overflow-x: auto; /* Add horizontal scroll for small screens */
        }

        table {
            margin: 20px auto;
            border-collapse: collapse;
            width: 80%; /* Adjust the width as needed */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
            background-color: #fff; /* Set a white background */
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 15px;
            text-align: center;
            cursor: pointer;
        }

        th {
            background-color: #f2f2f2;
        }

        .nav-link {
            color: #000000;
            text-decoration: none;
            display: block;
            padding: 15px;
            position: relative;
            transition: background-color 0.3s, color 0.3s;
        }

            .nav-link:hover {
                color: #fff;
                background-color: #28166f;
            }           
            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, #1cb8a1, #008081);
                z-index: -1;
                opacity: 0;
                transition: opacity 0.3s, transform 0.3s;
            }

            .nav-link:hover::before {
                opacity: 1;
                transform: scale(1.1);
            }

    </style>
    <style>
        .card-header.sticky-top {
            background-color: #fff; 
            z-index: 1000; 
            border-bottom: 1px solid #dee2e6; 
        }
    </style>
</head>
<body>

    <div class="card">
        @if (Model.msg != null)
        {
            ViewBag.msg = Model.msg;
        }
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3 mb-md-0">
                    <h5 class="mb-0">
                        <span style="color:#1cb8a1">DONOR</span>
                        <span style="color:#28166f">DETAILS</span>
                    </h5>
                </div>
                <div class="col-12 col-md-3 mb-3 mb-md-0 text-left">
                    <h5 class="mb-0">
                        <span style="color:#1cb8a1">INDIAN GANGOTRI</span>
                    </h5>
                </div>
                <div class="col-12 col-md-3 text-md-right">
                    <a href="/Nationalgangotri/DonorMaster/Home" class="btn btn-outline-primary"><i class="fas fa-plus"></i> ADD</a>
                    <a title="Go Back Home" href="/Gangotri/Home" class="btn btn-warning ml-2"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </div>

    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <div class="table-container">
                <table id="tableDetails" class="table table-hover table-bordered">

                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th></th>
                            <th>NGCODE</th>
                            <th>DONOR CATEGORY BY</th>
                            <th>GROUP NGCODE</th>
                            <th>ONLINE CUSTID</th>
                            <th>DATE OF ENTRY</th>
                            <th>DONNER NAME</th>
                            <th>ADDRESS</th>
                            <th>BUSSINESS OR JOB TYPE</th>
                            <th>PROFESSION</th>
                            <th>TOATL DONATION</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model.masterDetails)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Home", "DonorMaster", new { id = item.DonorID,view=true })" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Home", "DonorMaster", new { id = item.DonorID,edit=true})" title="Edit Donor Details">
                                            <i style="color: orange;" class="fas fa-edit"></i>
                                        </a>
                                    </td>

                                    <td>@item.DonorID</td>
                                    <td>@item.DonorCat</td>
                                    <td>@item.GroupNGCode</td>
                                    <td>@item.onlineCustId</td>
                                    <td>@item.dateOfEntry.GetValueOrDefault().ToString("dd-MM-yyyy")</td>
                                    <td>@item.FirstName @item.MiddleName @item.LastName</td>
                                    <td>@item.CityName, @item.DistrictName, @item.StateName, @item.CountryName</td>
                                    <td>@item.BussinessOrJobType</td>
                                    <td>@item.Profession</td>
                                    <td>@item.ToatlDonation</td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="..."></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="..."></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="..."></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="..." crossorigin="anonymous" />

</body>
</html>



