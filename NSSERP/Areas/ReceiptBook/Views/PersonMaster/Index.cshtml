@model NSSERP.Areas.ReceiptBook.Models.PersonMaster
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @section scripts {
       
        <script>
            $(document).ready(function () {

                $('#tableDetails').DataTable();

            });

        </script>

    }
    <style>
        /* Add your custom styles here */
        body {
            padding: 20px;
            background-color: #f8f9fa; /* Set a background color */
        }

        .container {
            text-align: center;
        }

        .table-container {
            overflow-x: auto; /* Add horizontal scroll for small screens */
        }

        table {
            margin: 20px auto;
            border-collapse: collapse;
            width: 80%; /* Adjust the width as needed */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
            background-color: #fff; /* Set a white background */
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 15px;
            text-align: center;
            cursor: pointer;
        }

        th {
            background-color: #f2f2f2;
        }

        .nav-link {
            color: #000000;
            text-decoration: none;
            display: block;
            padding: 15px;
            position: relative;
            transition: background-color 0.3s, color 0.3s;
        }

            .nav-link:hover {
                color: #fff;
                background-color: #28166f;
            }

            /* Add custom zoom-in effect on hover for tabs */
            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, #1cb8a1, #008081);
                z-index: -1;
                opacity: 0;
                transition: opacity 0.3s, transform 0.3s;
            }

            .nav-link:hover::before {
                opacity: 1;
                transform: scale(1.1);
            }

    </style>
    <style>
        .card-header.sticky-top {
            background-color: #fff; /* Set a background color for the sticky header */
            z-index: 1000; /* Set a higher z-index to ensure it appears above other elements */
            border-bottom: 1px solid #dee2e6; /* Add a border to separate it from the content */
        }
    </style>
</head>
<body>

    <div class="card">
        @if (Model.msg != null)
        {
            ViewBag.msg = Model.msg;
        }
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3 mb-md-0">
                    <h5 class="mb-0">
                        <span style="color:#1cb8a1">PERSON</span>
                        <span style="color:#28166f">DETAILS</span>
                    </h5>
                </div>
                <div class="col-12 col-md-3 mb-3 mb-md-0 text-left">
                    <h5 class="mb-0">
                        <span style="color:#1cb8a1">INDIAN GANGOTRI</span>
                    </h5>
                </div>
                <div class="col-12 col-md-3 text-md-right">
                    <a href="/ReceiptBook/PersonMaster/Home" class="btn btn-outline-primary"><i class="fas fa-plus"></i> ADD</a>
                    <a title="Go Back Home" href="/Gangotri/Home" class="btn btn-warning ml-2"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </div>
        <br />
        <div class="row">

            <div class="col-12">
                <div class="table-container">
                    <table id="tableDetails" class="table table-hover">

                        <thead class="thead-dark">
                            <tr>

                                <th></th>
                                <th></th>
                                <th></th>
                                <th>PERSON ID</th>
                                <th>PERSON NAME</th>
                                <th>ADDRESS</th>
                                <th>PHONE NO</th>
                                <th>STATE</th>
                                <th>CITY</th>
                                <th>PERSON FROM</th>
                                <th>CATEGORY</th>
                                <th>STATUS</th>

                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.masterDetails != null)
                            {
                                foreach (var item in Model.masterDetails)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Home", "PersonMaster", new { id = item.person_id, view = true })" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Home", "PersonMaster", new { id = item.person_id, edit = true })" title="Edit">
                                                <i style="color: orange;" class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Docs))
                                            {
                                                <label for="file1">Attached Documents</label>
                                                var fileNames = item.Docs.Split(',').Select(x => x.Trim()).ToList();
                                                for (int i = 0; i < fileNames.Count; i++)
                                                {
                                                    var simplifiedFileName = $"File {i + 1}";
                                                    <div><a class="btn btn-outline-primary view-btn" data-file-name="@fileNames[i]"><i class="fa fa-eye"></i>View @simplifiedFileName</a></div>
                                                }
                                            }
                                            else
                                            {
                                                <form method="post" action="@Url.Action("Index", "PersonMaster", new { id = item.person_id })" enctype="multipart/form-data">
                                                    <select class="form-control" id="documentType" name="DocumentType">
                                                        <option value="0">Select</option>
                                                        <option value="Photo">Photo</option>
                                                        <option value="Security Cheque">Security Cheque</option>
                                                        <option value="Id Proof">Id Proof</option>
                                                    </select>
                                                    <label data-browse="Browse">Attach Documents</label>
                                                    <input type="file" name="DocUpload" multiple id="file1" accept="image/*,application/pdf">

                                                    <input type="hidden" name="SelectedDocumentType" id="selectedDocumentType" value="">
                                                    <button type="submit" class="btn btn-outline-primary btn-sm" id="uploadBtn">Upload</button>
                                                </form>
                                            }
                                        </td>
                                        <td>@item.person_id</td>
                                        <td>@item.person_name</td>
                                        <td>@item.address,@item.address2,@item.address3</td>
                                        <td>@item.phone_no</td>
                                        <td>@item.state</td>
                                        <td>@item.city</td>
                                        <td>@item.person_from</td>
                                        <td>@item.category_code</td>
                                        <td>@item.status</td>
                                    </tr>
                                }
                            }
                        </tbody>

                    </table>
                    <script>
                        $(document).ready(function () {
                            $("#uploadBtn").click(function () {
                                var selectedValue = $("#documentType").val();
                                $("#selectedDocumentType").val(selectedValue);                               
                                $("#uploadForm").submit();
                            });
                        });

                        $(document).ready(function () {

                            $(document).on('click', '.view-btn', function () {
                                var fileName = $(this).data('file-name');
                                window.open('/DocPerson/' + fileName, '_blank');
                            });
                        });
                    </script>

              
                </div>
            </div>
        </div>
       
</body>
</html>

