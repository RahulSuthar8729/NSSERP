@using System.Security.Claims;
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Mvc.TagHelpers;
@using Microsoft.AspNetCore.Mvc.Rendering;
@using System.IO;
@model NSSERP.Areas.ReceiptBook.Models.PersonMaster;
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserDepartment = User.FindFirst("Department")?.Value;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="..." crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="..."></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="..."></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="..."></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <style>
        .card-header.sticky-top {
            background-color: #fff;
            z-index: 1000;
            border-bottom: 1px solid #dee2e6;
        }
    </style>
    @section scripts {
        <script>
            function convertToUpperCase(input) {
                input.value = input.value.toUpperCase();
            }
        </script>

    }
</head>
<body>
    <div class="card">
        @if (Model.msg != null || Model.msg != "")
        {
            ViewBag.msg = Model.msg;
        }
        <div class="card-header">
            <div class="row">
                <div class="col text-left">
                    <h5>
                        <span style="color:#1cb8a1">PERSON</span>
                        <span style="color:#28166f">MASTER</span>
                    </h5>
                </div>
                <div class="col text-left">
                    <h5>
                        <span style="color:#1cb8a1">INDIAN GANGOTRI</span>
                    </h5>
                </div>
                <div class="col-2 text-right">
                    <a title="Go Back Home" href="/Gangotri/Home" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form id="formdata" action="/ReceiptBook/PersonMaster/Home" method="post">
                @Html.AntiForgeryToken()

                <fieldset id="fieldset" class="show border rounded p-3">
                    <legend style="font-weight:bold;" class="d-flex justify-content-between align-items-center text-left">
                        <button class="btn btn-link collapse-icon" type="button" data-toggle="collapse" data-target="#fieldsetcontent" aria-expanded="false" aria-controls="fieldsetcontent">
                            <span id="collapseIcon" class="">&#43;</span>
                            <span style="font-size: larger;color:#1cb8a1;font-weight:bold;font-weight:bold;">Person Details</span>
                        </button>
                    </legend>

                    <div id="fieldsetcontent" class="nested-form-container collapse show">

                        <div class="row">
                            <div class="form-group col-lg-3">
                                <label>Person ID</label>
                                <input class="form-control" readonly name="person_id" type="text" value="@Model.person_id">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Date of Entry</label>
                                <input class="form-control" required oninput="convertToUpperCase(this)" name="doe" type="date" value="@Model.doe">
                            </div>


                            <div class="form-group col-lg-3">
                                <label for="">Category</label>
                                <select required class="form-control" name="category_code" id="category_code">
                                    <option value="">Select</option>
                                    @if (Model.PersonCatDetails != null)
                                    {
                                        @foreach (var order in Model.PersonCatDetails)
                                        {
                                            <option value="@order.code" data-currencycode="@order.name">@order.name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>NGCode</label>
                                <input class="form-control" name="ngcode" type="number" value="@Model.ngcode">
                            </div>

                            <div class="form-group col-lg-3" id="shadhakContainer">
                                <label for="shadhak">Shadhak Name</label>
                                <select class="form-control" name="Shadhak" id="Shadhak">

                                    <option value="">Select</option>
                                    @if (Model.EmployeeDetils != null)
                                    {
                                        @foreach (var order in Model.EmployeeDetils)
                                        {
                                            <option value="@order.EmpID" data-currencycode="@order.EmpName">@order.EmpName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Person Name</label>
                                <input class="form-control" name="person_name" type="text" value="@Model.person_name">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Department</label>
                                <input class="form-control" readonly type="text">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Designation</label>
                                <input class="form-control" name="designation" type="text" value="@Model.designation">
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="Address1">Address1<span style="color: red;">*</span></label>
                                <textarea required class="form-control" name="address" asp-for="address" oninput="convertToUpperCase(this)" placeholder="E.g., House No. 123" id="Address1" rows="1">@Model.address</textarea>

                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">Address2</label>
                                <textarea class="form-control" name="address2" asp-for="address2" oninput="convertToUpperCase(this)" placeholder="E.g. Street Name" id="Address2" rows="1">@Model.address2</textarea>

                            </div>
                            <div class="form-group col-lg-3">
                                <label for="Address1">Address3</label>
                                <textarea class="form-control" name="address3" asp-for="address3" oninput="convertToUpperCase(this)" placeholder="E.g.Area, Landmark" id="Address3" rows="1">@Model.address3</textarea>

                            </div>
                            <div class="form-group col-lg-3">
                                <label for="PinCode">PinCode<span style="color: red;">*</span></label>
                                <input type="number" value="@Model.pincode" required id="PinCode1" name="pincode" asp-for="pincode" class="form-control" />
                            </div>
                            <script>
                                $(document).ready(function () {
                                    // Function to handle pin code change
                                    function handlePinCodeChange(enteredPinCode) {
                                        $.ajax({
                                            url: '/NationalGangotri/DonationReceiveMaster/GetLocationDetailsByPinCode',
                                            type: 'GET',
                                            data: { pincode: enteredPinCode },
                                            success: function (response) {
                                                try {
                                                    // Parse the JSON response
                                                    var jsonData = response.data;

                                                    // Check if jsonData is an array and has at least one object
                                                    if (Array.isArray(jsonData) && jsonData.length > 0) {
                                                        // Get the first object in the array
                                                        var locationData = jsonData[0];

                                                        // Access the correct property names
                                                        $('#CountryID').val(locationData.CountryID);
                                                        //$("#CurrencyID").val(locationData.CountryID);

                                                        // Populate State dropdown
                                                        $('#StateID').empty().append('<option value="' + locationData.StateID + '">' + locationData.StateName + '</option>');

                                                        // Populate District dropdown
                                                        $('#DistrictID').empty().append('<option value="' + locationData.DistrictID + '">' + locationData.DistrictName + '</option>');

                                                        // Set the selected value in the dropdown based on text
                                                        var selectedCountryCode = locationData.CountryCode;
                                                        $('#countryCode option:contains("' + selectedCountryCode + '")').prop('selected', true);

                                                        // If the value is not in the dropdown, set it to an empty string
                                                        if ($('#countryCode').val() == null) {
                                                            $('#countryCode').val('');
                                                        }

                                                        // Set the selected value in the CurrencyID dropdown
                                                        var selectedCountry = locationData.CountryID;
                                                        $("#CurrencyID option").each(function () {
                                                            $(this).prop("selected", $(this).val() == selectedCountry);
                                                        });
                                                    } else {
                                                        console.error('Empty array in the JSON response.');
                                                    }
                                                } catch (error) {
                                                    console.error('Error parsing JSON response:', error);
                                                }
                                            },
                                            error: function (xhr, status, error) {
                                                console.log('AJAX request failed:', error);
                                            }
                                        });
                                    }


                                    var initialPinCode = $('#PinCode1').val();
                                    if (initialPinCode) {
                                        handlePinCodeChange(initialPinCode);
                                    }

                                    // Bind blur event for PinCode input
                                    $('#PinCode1').blur(function () {
                                        var enteredPinCode = $(this).val();
                                        handlePinCodeChange(enteredPinCode);
                                    });


                                });

                            </script>

                            <div class="form-group col-lg-3">
                                <label for="CountryID">Country<span style="color: red;">*</span></label>
                                <select class="form-control" required id="CountryID" asp-for="country" name="country">
                                    <option value="" selected disabled>Select Country</option>
                                    @if (Model.CountryList != null)
                                    {
                                        @foreach (var country in Model.CountryList)
                                        {
                                            <option value="@country.Country_Code" data-countryname="@country.Country_Name">@country.Country_Name</option>
                                        }
                                    }
                                </select>                               
                               

                            </div>

                            <divx class="form-group col-lg-3">
                                <label for="StateID">State<span style="color: red;">*</span></label>
                                <select class="form-control" required asp-for="state" id="StateID" name="state">
                                    <option value="" selected disabled>Select State</option>
                                </select>
                            </divx>

                            <script>
                                $(document).ready(function () {
                                    $('#CountryID').change(function () {
                                        var selectedCountryId = $(this).val();

                                        $.ajax({
                                            url: '/NationalGangotri/DonationReceiveMaster/GetStatesByCountry',
                                            type: 'GET',
                                            data: { countryId: selectedCountryId },
                                            success: function (response) {
                                                var data = JSON.parse(response.data);
                                                // Clear and populate state dropdown with retrieved states
                                                $('#StateID').empty().append('<option value="" selected disabled>Select State</option>');
                                                $.each(data, function (index, state) {
                                                    $('#StateID').append('<option value="' + state.StateId + '">' + state.StateName + '</option>');
                                                });
                                            },
                                            error: function (xhr, status, error) {
                                                console.log(error); // Handle errors if any
                                            }
                                        });
                                    });
                                });
                            </script>



                            <div class="form-group col-lg-3">
                                <label for="DistrictID">District<span style="color: red;">*</span></label>
                                <select class="form-control" required asp-for="district" id="DistrictID" name="district">
                                    <option value="" selected disabled>Select District</option>
                                </select>
                            </div>

                            <script>
                                $(document).ready(function () {
                                    $('#StateID').change(function () {
                                        var selectedStateId = $(this).val();

                                        $.ajax({
                                            url: '/NationalGangotri/DonationReceiveMaster/GetDistrictsByState',
                                            type: 'GET',
                                            data: { stateId: selectedStateId },
                                            success: function (response) {
                                                var districtData = JSON.parse(response.data);
                                               
                                                $('#DistrictID').empty().append('<option value="" selected disabled>Select District</option>');
                                                $.each(districtData, function (index, district) {
                                                    $('#DistrictID').append('<option value="' + district.DistrictID + '">' + district.DistrictName + '</option>');
                                                });
                                            },
                                            error: function (xhr, status, error) {
                                                console.log(error); 
                                            }
                                        });

                                        
                                    });
                                });
                            </script>

                            <div class="form-group col-lg-3">
                                <label for="CityID">City<span style="color: red;">*</span></label>

                                <select class="form-control" id="CityID" asp-for="city" name="city">
                                    <option selected disabled>Select City</option>
                                    @if (Model.CityList != null)
                                    {
                                        @foreach (var city in Model.CityList)
                                        {
                                            <option value="@city.CityID" @(Model.city == city.CityID ? "selected" : "")>
                                                @city.CityName
                                            </option>
                                        }
                                    }
                                </select>                               
                            </div>

                            <div class="form-group col-lg-3">
                                <label for="">Phone Residence</label>
                                <input type="number" value="@Model.phresi"  name="phresi"  class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">Phone Office</label>
                                <input type="number" value="@Model.phoffice" name="phoffice"  class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">Mobile No.</label>
                                <input type="number" value="@Model.phone_no" name="phone_no" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">Email-ID</label>
                                <input type="email" value="@Model.emailid" name="emailid" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">Bussiness/Job Type</label>
                                <select class="form-control" id="BussinessOrJobType" name="bus_type">
                                    <option value="0">select</option>
                                    @if (Model.bussinessTypesList != null)
                                    {
                                        foreach (var list in Model.bussinessTypesList)
                                        {
                                            <option value="@list.b_type">@list.b_type</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">Workign IN</label>
                                <input type="text" value="@Model.bus_in" name="bus_in" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">Valid From</label>
                                <input type="date" value="@Model.from_doe" name="from_doe" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">valid To</label>
                                <input type="date" value="@Model.to_doe" name="to_doe" class="form-control" />
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="">Remarks</label>
                                <textarea class="form-control" name="remarks" asp-for="remarks" oninput="convertToUpperCase(this)" placeholder="enter Remarks" rows="1">@Model.remarks</textarea>

                            </div>

                            <div class="form-group col-lg-3">
                                <label for="">From</label>
                                <select class="form-control" id="BussinessOrJobType" name="person_from">
                                    <option value="0">select</option>
                                    <option value="RathYatra">RathYatra</option>
                                    <option value="Katha">Katha</option>
                                    <option value="Event">Event</option>
                                    
                                </select>
                            </div>

                            <div class="form-group col-lg-3">
                                <label>Status:</label><br>
                                <input type="radio" name="status" value="Y" @(Model.status == "Y" ? "checked" : "")> Active<br>
                                <input type="radio" name="status" value="N" @(Model.status == "N" ? "checked" : "")> Inactive<br>
                            </div>
                        </div>
                    </div>

                </fieldset>

                <br />
                <div class="container-lg">
                    <div class="text-center">

                        @{
                            string BtnName = string.Empty;
                            string viewParam = Context.Request.Query["view"];
                            bool isViewEnabled = !string.IsNullOrEmpty(viewParam) && viewParam.ToLower() == "true";

                            string editParam = Context.Request.Query["edit"];
                            bool isEditEnabled = !string.IsNullOrEmpty(editParam) && editParam.ToLower() == "true";

                            if (isEditEnabled)
                            {
                                BtnName = "Update";
                            }
                            else
                            {
                                BtnName = "Submit";
                            }
                        }

                        <button type="submit" class="btn btn-success" style="@(isViewEnabled ? "display:none;" : "")">
                            <i class="fas fa-check"></i>@BtnName
                        </button>

                        <button type="reset" class="btn btn-danger">Cancel</button>
                        <a title="Go Back Home" href="/Gangotri/Home" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</body>
</html>




