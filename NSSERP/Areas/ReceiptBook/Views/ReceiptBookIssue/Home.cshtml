@using System.Security.Claims;
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Mvc.TagHelpers;
@using Microsoft.AspNetCore.Mvc.Rendering;
@using System.IO;
@model NSSERP.Areas.ReceiptBook.Models.ReceiptBookIssue;
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserDepartment = User.FindFirst("Department")?.Value;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="..." crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="..."></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="..."></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="..."></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <style>
        .card-header.sticky-top {
            background-color: #fff;
            z-index: 1000;
            border-bottom: 1px solid #dee2e6;
        }
    </style>
    @section scripts {
        <script>
            function convertToUpperCase(input) {
                input.value = input.value.toUpperCase();
            }
        </script>

    }
</head>
<body>
    <div class="card">
        @if (Model.msg != null || Model.msg != "")
        {
            ViewBag.msg = Model.msg;
        }
        <div class="card-header">
            <div class="row">
                <div class="col text-left">
                    <h5>
                        <span style="color:#1cb8a1">RECEIPT BOOK</span>
                        <span style="color:#28166f">ISSUE TRANSACTION</span>
                    </h5>
                </div>
                <div class="col text-left">
                    <h5>
                        <span style="color:#1cb8a1">INDIAN GANGOTRI</span>
                    </h5>
                </div>
                <div class="col-2 text-right">
                    <a title="Go Back Home" href="/ReceiptBook/ReceiptBookIssue/Index" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form id="formdata" action="/ReceiptBook/ReceiptBookIssue/Home" method="post">
                @Html.AntiForgeryToken()

                <fieldset id="fieldset" class="show border rounded p-3">
                    <legend style="font-weight:bold;" class="d-flex justify-content-between align-items-center text-left">
                        <button class="btn btn-link collapse-icon" type="button" data-toggle="collapse" data-target="#fieldsetcontent" aria-expanded="false" aria-controls="fieldsetcontent">
                            <span id="collapseIcon" class="">&#43;</span>
                            <span style="font-size: larger;color:#1cb8a1;font-weight:bold;font-weight:bold;">ReceiptBook Issue Details</span>
                        </button>
                    </legend>

                    <div id="fieldsetcontent" class="nested-form-container collapse show">

                        <div class="row">
                            <div class="form-group col-lg-3">
                                <label>Book Issue No</label>
                                <input class="form-control" readonly name="book_issue_no" type="text" value="@Model.book_issue_no">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Issue Date</label>
                                <input class="form-control"   name="IssueDate" type="date" value="@Model.IssueDate">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Person Name</label>
                                <select class="form-control" name="PersonId" id="Person">
                                    <option value="">Select</option>
                                    @if (Model.PersonDetails != null)
                                    {
                                        @foreach (var order in Model.PersonDetails)
                                        {
                                            <option value="@order.person_id" data-currencycode="@order.person_name" @(Model.PersonId == order.person_id ? "selected" : "")>@order.person_name</option>
                                        }
                                    }
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Submit Date</label>
                                <input class="form-control"  name="SubmitDate" type="date" value="@Model.SubmitDate">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Issue Authority</label>
                                <select id="RbType" class="form-control" name="IssueAuthority">
                                    <option value="KAULACHARYA JI" >KAULACHARYA JI</option>
                                    <option value="PRASHANT JI" selected>PRASHANT JI</option>
                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Book Holder Name</label>
                                <input class="form-control" name="BookHolderName" oninput="convertToUpperCase(this)" type="text" value="@Model.BookHolderName">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Book ID From</label>
                                <input class="form-control" name="ReceiptBookNoFrom" type="number" value="@Model.ReceiptBookNoFrom">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Book ID To</label>
                                <input class="form-control" name="ReceiptBookNoTo" type="number" value="@Model.ReceiptBookNoTo">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Balance Receipt</label>
                                <input class="form-control" readonly  type="number" value="0">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Receipt From</label>
                                <input class="form-control" name="ProvReceiptFrom" type="number" value="@Model.ProvReceiptFrom">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Receipt To</label>
                                <input class="form-control" name="ProvReceiptTo" type="number" value="@Model.ProvReceiptTo">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Receipt Book Type</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ReceiptBookType" id="radio1" value="80G" @(Model.ReceiptBookType == "80G" ? "checked" : "")>
                                    <label class="form-check-label" for="radio1">
                                        80G
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ReceiptBookType" id="radio2" value="35AC" @(Model.ReceiptBookType == "35AC" ? "checked" : "")>
                                    <label class="form-check-label" for="radio2">
                                        35AC
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ReceiptBookType" id="radio3" value="FCRA" @(Model.ReceiptBookType == "FCRA" ? "checked" : "")>
                                    <label class="form-check-label" for="radio3">
                                        FCRA
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ReceiptBookType" checked id="radio4" value="Provisional" @(Model.ReceiptBookType == "Provisional" ? "checked" : "")>
                                    <label class="form-check-label" for="radio4">
                                        Provisional
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ReceiptBookType" id="radio5" value="Donationbox" @(Model.ReceiptBookType == "Donationbox" ? "checked" : "")>
                                    <label class="form-check-label" for="radio5">
                                        Donation Box
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ReceiptBookType" id="radio6" value="General" @(Model.ReceiptBookType == "General" ? "checked" : "")>
                                    <label class="form-check-label" for="radio6">
                                        General
                                    </label>
                                </div>
                            </div> 
                       
                            <div class="form-group col-lg-3">
                                <label>Used</label>
                                <input class="form-control" name="ReceiptUsed" value="@Model.ReceiptUsed" readonly type="text">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Taken By</label>
                                <input class="form-control" name="TakenBy" type="text" value="@Model.TakenBy">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Remarks</label>
                                <textarea class="form-control" name="Remark" rows="2" cols="50">@Model.Remark</textarea>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Person Name</label>
                                <select class="form-control" name="RefPersonid" id="RefPersonid">
                                    <option value="">Select</option>
                                    @if (Model.PersonDetails != null)
                                    {
                                        @foreach (var order in Model.PersonDetails)
                                        {
                                            <option value="@order.person_id" data-currencycode="@order.person_name" @(Model.PersonId == order.person_id ? "selected" : "")>@order.person_name</option>
                                        }
                                    }
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-3">

                                <div class="form-check">
                                    <input id="p_book_rrs_no" class="form-check-input" name="Event" type="checkbox" value="Y" @(Model.Event == "Y" ? "checked" : "")>
                                    <label class="form-check-label" for="p_book_rrs_no">Event Detail</label>
                                </div>
                            </div>

                          

                        </div>
                    </div>

                </fieldset>
                <script>
                    $(document).ready(function () {
                        toggleFieldset(); // Call the toggleFieldset function when the document is ready
                        $('#p_book_rrs_no').change(toggleFieldset); // Bind the toggleFieldset function to the change event of the checkbox
                    });

                    function toggleFieldset() {
                        var checkbox = $('#p_book_rrs_no');
                        var fieldset = $('#fieldset2');

                        if (checkbox.is(':checked') && checkbox.val() == "Y") {
                            fieldset.show();
                        } else {
                            fieldset.hide();
                        }
                    }
                </script>
                <fieldset id="fieldset2" class="border rounded p-3" style="display:none;">
                    <legend style="font-weight:bold;" class="d-flex justify-content-between align-items-center text-left">
                        <button class="btn btn-link collapse-icon" type="button" data-toggle="collapse" data-target="#fieldsetcontent2" aria-expanded="false" aria-controls="fieldsetcontent2">
                            <span id="collapseIcon" class="">+</span>
                            <span style="font-size: larger;color:#1cb8a1;font-weight:bold;">Event Details</span>
                        </button>
                    </legend>

                    <div id="fieldsetcontent2" class="nested-form-container collapse show">

                        <div class="row">

                            <div class="form-group col-lg-6">
                                <label>Event Name</label>
                                <select class="form-control"  id="EventId" name="EventId")>
                                    <option value="">Select</option>
                                    @if (Model.ReceiveInEventList != null)
                                    {
                                        foreach (var eventlist in Model.ReceiveInEventList)
                                        {
                                            <option value="@eventlist.P_ID" data-eventname="@eventlist.NAME_ENG" @(Model.EventId != null && Model.EventId == eventlist.P_ID ? "selected" : "")>@eventlist.NAME_ENG</option>
                                        }
                                    }
                                </select>


                            </div>
                            <div class="form-group col-lg-6">
                                <label>Event English Name</label>
                                <textarea class="form-control" name="EventName" rows="1" cols="50">@Model.EventName</textarea>
                            </div>
                            <div class="form-group col-lg-3">
                                <label for="CityID">Event City</label>

                                <select class="form-control" id="CityID" name="EventPlace">
                                    <option selected disabled>Select City</option>
                                    @if (Model.CityList != null)
                                    {
                                        @foreach (var city in Model.CityList)
                                        {
                                            <option value="@city.CityID" @(Model.EventPlace == city.CityID.ToString() ? "selected" : "")>
                                                @city.CityName
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>Start Date</label>
                                <input class="form-control" name="EventFDate" type="date" value="@Model.EventFDate">
                            </div>
                            <div class="form-group col-lg-3">
                                <label>End Date</label>
                                <input class="form-control" name="EventTDate" type="date" value="@Model.EventTDate">
                            </div>

                        </div>
                    </div>
                </fieldset>                <br />
                <div class="container-lg">
                    <div class="text-center">

                        @{
                            string BtnName = string.Empty;
                            string viewParam = Context.Request.Query["view"];
                            bool isViewEnabled = !string.IsNullOrEmpty(viewParam) && viewParam.ToLower() == "true";

                            string editParam = Context.Request.Query["edit"];
                            bool isEditEnabled = !string.IsNullOrEmpty(editParam) && editParam.ToLower() == "true";

                            if (isEditEnabled)
                            {
                                BtnName = "Update";
                            }
                            else
                            {
                                BtnName = "Submit";
                            }
                        }

                        <button type="submit" class="btn btn-success" style="@(isViewEnabled ? "display:none;" : "")">
                            <i class="fas fa-check"></i>@BtnName
                        </button>

                        <button type="reset" class="btn btn-danger">Cancel</button>
                        <a title="Go Back Home" href="/ReceiptBook/ReceiptBookIssue/Index" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</body>
</html>




