@{
    ViewData["Title"] = "HeadMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="..." crossorigin="anonymous" />
    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa;
        }

        .container {
            text-align: center;
        }

        .card-header h5 {
            margin: 0;
        }

        .card-header span {
            color: #1cb8a1;
        }

        .card-header .btn-back {
            margin-left: 2px;
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            margin: 20px auto;
            border-collapse: collapse;
            width: 80%;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 15px;
            text-align: center;
            cursor: pointer;
        }

        th {
            background-color: #f2f2f2;
        }

        .nav-link {
            color: #000000;
            text-decoration: none;
            display: block;
            padding: 15px;
            position: relative;
            transition: background-color 0.3s, color 0.3s;
        }

            .nav-link:hover {
                color: #fff;
                background-color: #28166f;
            }

            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, #1cb8a1, #008081);
                z-index: -1;
                opacity: 0;
                transition: opacity 0.3s, transform 0.3s;
            }

            .nav-link:hover::before {
                opacity: 1;
                transform: scale(1.1);
            }

        /* Add your custom styles here */
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3 mb-md-0">
                    <h5>
                        <span style="color:#1cb8a1">HEAD</span>
                        <span style="color:#28166f">MASTER</span>
                    </h5>
                </div>
                <div class="col-12 col-md-3 mb-3 mb-md-0 text-left">
                    <h5>
                        <span style="color:#1cb8a1">INDIAN GANGOTRI</span>
                    </h5>
                </div>
                <div class="col-12 col-md-3 text-md-right">
                    <a title="Go Back Home" href="/Gangotri/Home" class="btn btn-warning btn-back"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </div>

        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="code">Code</label>
                        <input type="text" class="form-control" id="code" name="code">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                </div>
            </div>

            <div class="container text-center">
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Submit</button>
                    <a href="/Gangotri/Home" title="Go Back Home" class="btn btn-warning btn-back"><i class="fa fa-arrow-left"></i>Back</a>
                </div>
            </div>
        </form>
    </div>

    <!-- Include necessary JavaScript files, for example, Bootstrap and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="..."></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="..."></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="..."></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="..." crossorigin="anonymous" />
</body>
</html>


