
@{
    ViewData["Title"] = "AdvSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="..." crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="..."></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="..."></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="..."></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>
    <div class="card">

        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3 mb-md-0">
                    <h5 class="mb-0">
                        <span style="color:#1cb8a1">ADVANCE </span>
                        <span style="color:#28166f">SEARCH</span>
                    </h5>
                </div>
                <div class="col-12 col-md-3 mb-3 mb-md-0">
                    <h5 class="mb-0">
                        <span style="color:#1cb8a1">INDIAN GANGOTRI</span>
                    </h5>
                </div>
                <div class="col-12 col-md-3 text-md-right">
                    <a title="Go Back Home" href="/Gangotri/Home" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>

                </div>
            </div>
        </div>


        <div class="table-responsive">
            <table class="table table-bordered" style="font-size: smaller;">
                <tr>
                    <td>
                        <div class="row">
                            <div class="form-group">
                                <label for="searchText">Search Text</label>
                                <textarea class="form-control" id="ReceiveID" rows="1" name="searchText"></textarea>
                            </div>
                        </div>
                    </td>
                    <td>
                        <br />
                        <div class="form-group">
                             <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Go...</button>
                        </div>
                    </td>                 
                </tr>
            </table>
           
        </div>

       

    </div>

    <br />

    <div class="row col-lg-12">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>CODE NO</th>
                            <th>SHRIYUT</th>
                            <th>FIRST NAME</th>
                            <th>COMPANY</th>
                            <th>ADDRESS1</th>
                            <th>ADDRESS2</th>
                            <th>ADDRESS3</th>
                            <th>TEHSIL</th>
                            <th>CITY</th>
                            <th>DISTRICT</th>
                            <th>STATE</th>
                            <th>PINCODE</th>
                            <th>VIA</th>
                            <th>STD-CODE</th>
                            <th>PHONE(O)</th>
                            <th>PHONE(R)</th>
                            <th>MOBILE</th>
                            <th>FAX</th>
                            <th>EMAIL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Property1</td>
                                    <td>@item.Property2</td>
                                    <!-- ... your table data ... -->
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
   


</body>
</html>