@model IEnumerable<NSSERP.Areas.Masters.Models.CampaignMaster>

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Edit Campaign</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="CampaignMaster" asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="REF_ID" name="REF_ID" type="hidden" />

                        <div class="form-group">
                            <label asp-for="CampaignName" class="control-label">Campaign Name</label>
                            <input asp-for="CampaignName"  type="text" id="CampaignName" name="CampaignName" class="form-control" required />
                            <span asp-validation-for="CampaignName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="IsActive" class="control-label">Is Active</label>
                            <select asp-for="IsActive" id="IsActive" name="IsActive" class="form-control" required>
                                <option value="Y">Active</option>
                                <option value="N">Inactive</option>
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Save Changes</button>
                            <a href="/Masters/CampaignMaster/Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
