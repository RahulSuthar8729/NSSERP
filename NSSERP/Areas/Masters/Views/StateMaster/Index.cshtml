@model NSSERP.Areas.Masters.Models.StateMaster
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="..." crossorigin="anonymous" />

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />

@section scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#Indextable').DataTable();
            function confirmDelete(CountryId) {
                var result = confirm("Are you sure you want to delete this country?");
                if (result) {
                    window.location.href = "/Masters/CountryMaster/Delete?countryId=" + CountryId;
                }
            }
        });

    </script>
}
<div class="card">
    @if (Model.msg != null)
    {
        ViewBag.msg = Model.msg;
    }
    <div class="card-header">
        <div class="row">
            <div class="col text-left">
                <h5>
                    <span style="color:#1cb8a1">STATE</span>
                    <span style="color:#28166f">MASTER</span>
                </h5>
            </div>
            <div class="col text-left">
                <h5>
                    <span style="color:#1cb8a1"></span>
                </h5>
            </div>
            <div class="col-3 text-right">
                <a href="/Masters/StateMaster/Create" class="btn btn-primary">Add State</a>
                <a  title="Go Back Home" href="/Administrator/Home" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <table id="Indextable" class="table table-hover">
            <thead class="thead-dark">
                <tr>

                    <th>State Name</th>
                    <th>Country</th>                    
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {

                    @foreach (var item in Model.masterDetails)
                    {
                        <tr>

                            <td>@item.State_Name</td>
                            <td>@item.Country_Name</td>                           
                            <td>
                                <a href="/Masters/StateMaster/Edit?countryId=@item.State_Code" title="Edit" asp-route-countryCode="@item.State_Code">
                                    <i class="fas fa-edit btn btn-primary"></i>
                                </a>
                                <a onclick="confirmDelete('@item.State_Code')" title="Delete">
                                    <i class="fas fa-trash-alt btn btn-danger"></i>
                                </a>

                                <script>
                                    function confirmDelete(id) {
                                        var result = confirm("Are you sure you want to delete this State?");
                                        if (result) {
                                            window.location.href = "/Masters/StateMaster/Delete?stateid=" + id;
                                        }
                                    }
                                </script>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


