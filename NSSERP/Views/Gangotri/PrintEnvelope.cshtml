@{
    ViewData["Title"] = "PrintEnvelope";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Include necessary CSS files -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.3/dist/flatpickr.min.css">

    <!-- Include necessary JavaScript files -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="..."></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="..."></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="..."></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.3/dist/flatpickr.min.js"></script>
    <style>
        /* Add your custom styles here */
        body {
            padding: 20px;
            background-color: #f8f9fa; /* Set a background color */
        }

        .container {
            text-align: center;
        }

        .table-container {
            overflow-x: auto; /* Add horizontal scroll for small screens */
        }

        table {
            margin: 20px auto;
            border-collapse: collapse;
            width: 80%; /* Adjust the width as needed */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
            background-color: #fff; /* Set a white background */
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 15px;
            text-align: center;
            cursor: pointer;
        }

        th {
            background-color: #f2f2f2;
        }

        .nav-link {
            color: #000000;
            text-decoration: none;
            display: block;
            padding: 15px;
            position: relative;
            transition: background-color 0.3s, color 0.3s;
        }

            .nav-link:hover {
                color: #fff;
                background-color: #28166f;
            }

            /* Add custom zoom-in effect on hover for tabs */
            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, #1cb8a1, #008081);
                z-index: -1;
                opacity: 0;
                transition: opacity 0.3s, transform 0.3s;
            }

            .nav-link:hover::before {
                opacity: 1;
                transform: scale(1.1);
            }

    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="card-mb-0">
            <div class="card-header">
                <div class="row">
                    <div class="col text-left">
                        <h5>
                            <span style="color:#1cb8a1">PRINT</span>
                            <span style="color:#28166f">ENVELOPE</span>
                        </h5>
                    </div>
                    <div class="col text-left" style="margin-right: 200px;">

                        <h5>
                            <span style="color:#1cb8a1">INDIAN GANGOTRI</span>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <table style="font-size:smaller" class="table-responsive-lg col-lg-12">
            <tr>
                <td>
                    <div class="row">
                        <div class="form-group">
                            <label for="Receive ID">Receive ID</label>
                            <input type="text" class="form-control" id="Receive ID" name="Receive ID">
                        </div>
                    </div>
                </td>

                <td>
                    <div class="row">
                        <div class="form-group">
                            <label for="NGCode">NGCode</label>
                            <input type="text" class="form-control" id="NGCode" name="NGCode">
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="form-group">
                            <label for="Receipet No.">Receipet No.</label>
                            <input type="text" class="form-control" id="Receipet No." name="Receipet No.">
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                         <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Go...</button>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="form-group">
                            <a asp-action="Home" title="Go Back Home" asp-controller="Gangotri" class="btn btn-warning">Back</a>
                        </div>
                    </div>
                </td>
            </tr>

        </table>
    </div>
    <br />
    <div class="row col-lg-12">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th>DISPATCH ID</th>
                            <th>NGCODE</th>
                            <th>DOKECT NO.</th>
                            <th>RECEIPT NO.</th>
                            <th>RECEIVE DATE/RECEIPT DATE/DISPATCH DATE</th>
                            <th>AMOUNT</th>
                            <th>USERNAME</th>
                            <th>REMARK</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Property1</td>
                                    <td>@item.Property2</td>
                                    <!-- ... your table data ... -->
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</body>
</html>
