@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NSSERP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    @* <script src="~/lib/popper.js/dist/umd/popper.min.js"></script> *@
    @* <script src="~/lib/dist/umd/popper.min.js"></script> *@
    @* <script src="~/lib/popper.js/dist/umd/popper.min.js"></script> *@
    <script src="https://unpkg.com/@@popperjs/core@2/dist/umd/popper.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="~/FontSome/css/all.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/NSSERP.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

            $('.nav-item.dropdown').on('click', function () {
                $(this).toggleClass('show');
            });


            $(document).on('click', function (e) {
                if (!$(e.target).closest('.nav-item.dropdown').length) {
                    $('.nav-item.dropdown').removeClass('show');
                }
            });
        });
    </script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a taghelpers="href" asp-area="" asp-controller="Home" asp-action="Index">
                <img class="navbar-brand" src="~/logo.png" alt="Logo" style="width: 230px; height: 55px;" />
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <!-- Other menu items... -->

                </ul>
                <!-- User information section -->
                <div class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="navbar-nav ml-auto">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="navbar-nav ml-auto">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <div class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle text-dark " href="#" id="userProfileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-user-circle"></i>&nbsp;@User.Identity.Name
                                            </a>

                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userProfileDropdown">
                                                <div class="card border-0">
                                                    <div class="card-body">
                                                        <h5 class="card-title">User Profile</h5>
                                                        <div class="mb-3">
                                                            <i class="fas fa-briefcase"></i>&nbsp; Department: @User.FindFirst("Department")?.Value
                                                        </div>
                                                        <div>
                                                            <i class="fas fa-users"></i>&nbsp; Role: @User.FindFirst(ClaimTypes.Role)?.Value
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" href="#">
                                                    <i class="fas fa-cogs"></i>&nbsp; Settings
                                                </a>
                                                <a class="dropdown-item" asp-area="" asp-controller="Home" title="Log Out" asp-action="Logout">
                                                    <i class="fas fa-sign-out-alt"></i>&nbsp; Log Out
                                                    <span class="user-name">(@User.Identity.Name)</span>
                                                </a>
                                                <style>
                                                    /* Add these styles to your CSS file or within a style block in your HTML */
                                                    .dropdown-item {
                                                        /* Styles for the "Log Out" link */
                                                        color: #007bff; /* Change the color to your preference */
                                                        font-weight: bold;
                                                    }

                                                    .user-name {
                                                        /* Styles for the user name */
                                                        color: #28a745; /* Change the color to your preference */
                                                        font-weight: normal; /* If you want a different font weight than bold */
                                                    }

                                                </style>
                                            </div>
                                        </div>
                                    }
                                </div>

                            }
                        </div>

                    }
                </div>

            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="container-md">
            @Html.Partial("SuccessMessage")
            @Html.Partial("ErrorMessage")
        </div>
        <div class="row">
            @if (ViewBag.ShowSidebar != null && ViewBag.ShowSidebar)
            {
                <div class="col-md-4">
                    @Html.Partial("_Sidebar")
                </div>
                <div class="col-md-8">
                    <!-- Adjusted the column sizes when the sidebar is present -->
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
            else
            {
                <div class="col-md-12">
                    <!-- Full 12 columns for main content when sidebar is hidden -->
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
        </div>
    </div>

    <footer>
        <div class="container">
            &copy; @DateTime.Today.Year.ToString() - NSSERP
        </div>
    </footer>
    <!-- Other scripts and JavaScript files remain unchanged -->
    <!-- Bootstrap JavaScript (if not using the Bootstrap CDN) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
